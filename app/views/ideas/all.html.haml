%h1= title

%table.table.table-hover.table-striped
  %tr
    %th Content
    %th
  - @ideas.each do |idea|
    %tr
      %td= truncate idea.content, length: 50
      %td
        - if can? :destroy, idea
          = link_to '<i class="icon-trash"></i>'.html_safe, idea, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger pull-right'
        - if can? :update, idea   
          = link_to '<i class="icon-edit"></i>'.html_safe, edit_idea_path(idea), class: 'btn pull-right', style: 'margin-right: 5px' 

%br

= link_to 'Share a new one', new_idea_path